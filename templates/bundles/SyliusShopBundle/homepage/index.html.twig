    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Surfsup Shop loaded successfully!');
            
            // Add hover effects to category cards
            const categoryCards = document.querySelectorAll('.category-card');
            categoryCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Check login status and update header
            function updateHeaderForLoginStatus() {
                const userEmail = localStorage.getItem('surfsup_current_user_email');
                const userStatus = document.getElementById('userStatus');
                const userEmailSpan = document.getElementById('userEmail');
                const authContainer = document.getElementById('authContainer');
                const logoutBtn = document.getElementById('logoutBtn');

                if (userEmail) {
                    // User is logged in
                    userStatus.style.display = 'block';
                    userEmailSpan.textContent = userEmail;
                    authContainer.style.display = 'none';
                    logoutBtn.style.display = 'block';
                } else {
                    // User is not logged in
                    userStatus.style.display = 'none';
                    authContainer.style.display = 'block';
                    logoutBtn.style.display = 'none';
                }
                
                // Update cart counter based on login status
                if (window.CartUtils) {
                    window.CartUtils.updateCartCounter();
                }
            }

            // Logout function
            window.logout = function() {
                localStorage.removeItem('surfsup_current_user_email');
                localStorage.removeItem('surfsup_cart'); // Clear cart on logout
                updateHeaderForLoginStatus();
                // Update cart counter to 0
                if (window.CartUtils) {
                    window.CartUtils.updateCartCounter();
                }
                alert('You have been logged out successfully!');
            };

            // Auth dropdown functionality
            const authContainer = document.querySelector('.auth-dropdown-container');
            const authButton = document.querySelector('.auth-button');
            const authDropdown = document.getElementById('auth-dropdown');
            let hoverTimeout;

            authContainer.addEventListener('mouseenter', function() {
                clearTimeout(hoverTimeout);
                authDropdown.style.display = 'block';
                authButton.style.borderColor = '#0066cc';
                authButton.style.color = '#0066cc';
                authButton.style.backgroundColor = '#f0f8ff';
            });

            authContainer.addEventListener('mouseleave', function() {
                hoverTimeout = setTimeout(function() {
                    authDropdown.style.display = 'none';
                    authButton.style.borderColor = '#ddd';
                    authButton.style.color = '#333';
                    authButton.style.backgroundColor = 'white';
                }, 150);
            });

            // Initialize header based on login status
            updateHeaderForLoginStatus();

            // Embedded cart utilities (same as working test page)
            window.CartUtils = {
                addToCart: function(itemId, itemName, price, emoji) {
                    console.log('=== CART DEBUG START ===');
                    console.log('CartUtils.addToCart called with:', itemId, itemName, price, emoji);
                    
                    // Check if user is logged in
                    const userEmail = localStorage.getItem('surfsup_current_user_email');
                    console.log('User email from localStorage:', userEmail);
                    
                    if (!userEmail) {
                        alert('Please log in to add items to your cart!');
                        console.log('User not logged in, returning false');
                        return false;
                    }

                    // Get current cart from localStorage
                    const cartKey = 'surfsup_cart';
                    let cart = JSON.parse(localStorage.getItem(cartKey)) || {};
                    console.log('Current cart before adding:', cart);

                    // Add or update item in cart
                    if (cart[itemId]) {
                        cart[itemId].quantity += 1;
                        console.log('Item already exists, increasing quantity');
                    } else {
                        cart[itemId] = {
                            name: itemName,
                            price: price,
                            emoji: emoji,
                            quantity: 1
                        };
                        console.log('New item added to cart');
                    }

                    // Save cart to localStorage
                    localStorage.setItem(cartKey, JSON.stringify(cart));
                    console.log('Cart saved to localStorage:', cart);

                    // Update cart counter on all pages
                    this.updateCartCounter();

                    // Dispatch custom event to notify other pages
                    window.dispatchEvent(new CustomEvent('cartUpdated'));
                    console.log('cartUpdated event dispatched');

                    // Show success message
                    alert(`${itemName} added to cart!`);
                    console.log('=== CART DEBUG END ===');
                    return true;
                },

                updateCartCounter: function() {
                    console.log('=== UPDATE CART COUNTER DEBUG ===');
                    
                    // Check if user is logged in
                    const userEmail = localStorage.getItem('surfsup_current_user_email');
                    console.log('User email from localStorage:', userEmail);
                    
                    let totalItems = 0;
                    
                    if (userEmail) {
                        // User is logged in, show cart items
                        const cartKey = 'surfsup_cart';
                        const cart = JSON.parse(localStorage.getItem(cartKey)) || {};
                        totalItems = Object.values(cart).reduce((sum, item) => sum + item.quantity, 0);
                        console.log('User logged in, cart contents:', cart);
                    } else {
                        // User not logged in, show 0
                        console.log('User not logged in, showing 0 items');
                    }
                    
                    console.log('Total items calculated:', totalItems);
                    
                    // Update cart counter in header (if it exists)
                    const cartCounter = document.querySelector('.cart-counter');
                    console.log('Cart counter element found:', cartCounter);
                    console.log('Cart counter element details:', cartCounter ? {
                        tagName: cartCounter.tagName,
                        className: cartCounter.className,
                        textContent: cartCounter.textContent
                    } : 'null');
                    
                    if (cartCounter) {
                        cartCounter.textContent = totalItems;
                        console.log('Cart counter updated to:', totalItems);
                    } else {
                        console.log('No cart counter element found on this page');
                    }
                    console.log('=== END UPDATE CART COUNTER DEBUG ===');
                },

                getCart: function() {
                    const cartKey = 'surfsup_cart';
                    return JSON.parse(localStorage.getItem(cartKey)) || {};
                }
            };

            // Initialize cart counter
            window.CartUtils.updateCartCounter();

            // Listen for cart updates
            window.addEventListener('cartUpdated', function() {
                console.log('Cart updated event received on homepage');
                window.CartUtils.updateCartCounter();
            });
        });
    </script>
