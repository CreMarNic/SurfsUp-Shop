<!-- Newsletter Section -->
<section class="newsletter-section" style="background: #0066cc; color: white; padding: 60px 0;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="fw-bold mb-3">
                    <i class="fas fa-envelope me-2"></i>
                    Sign up for email & texts and score 20% off your first order!
                </h3>
                <p class="mb-4">Get the latest surf gear updates and exclusive offers!</p>
                <form class="newsletter-form" style="max-width: 400px; margin: 0 auto;">
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Your email address" style="border-radius: 8px 0 0 8px; border: none; padding: 15px;">
                        <button class="btn btn-warning" type="submit" style="border-radius: 0 8px 8px 0; padding: 15px 25px; font-weight: 600;">
                            SIGN UP
